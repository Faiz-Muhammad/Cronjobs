<header class="main-header">
  <!-- Logo -->
  <a href="#" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>C</b>jobs</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Cron</b>Jobs</span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">


    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li class="dropdown user user-menu">
          <a href="#" class="4-toggle" data-toggle="dropdown">
            <!-- <img src="../../dist/img/user2-160x160.jpg" class="user-image" alt="User Image"> -->
            <%= image_tag((current_user.image), class: "user-image") %>
            <span class="hidden-xs"><%= current_user.username %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <%= image_tag((current_user.image), class: "img-circle") %>
              <p>
                <%= current_user.username %>
                <small>Joined <%= time_ago_in_words(current_user.created_at) %> ago</small>
              </p>
            </li>

            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "Profile", user_path(current_user), class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
