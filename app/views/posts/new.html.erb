<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <% @page_title = "ADD POSTS - SCHEDULE IN TWO SIMPLE STEPS" %>
  <%= render 'layouts/page_header' %>

  <!-- Main content -->
  <section class="content">
    <section class="container-main">
      <main>
        <!-- <div class="topbar">
          <h4 class="topbar__heading">ADD POSTS - SCHEDULE IN TWO SIMPLE STEPS</h4>
          <span class="topbar__accounts"> Add Social Media Accounts
            <button class="btn btn-social-icon btn-facebook">
              <span class="fa fa-facebook"></span>
            </button>
          </span>
        </div> -->
        <!-- <section class="notification u-margin-bottom-small">
          <div class="notification__container notification__simple">
            <span class="notification__text">Pages saved successfully.</span>
          </div>
            <div class="notification__container notification__success">
              <span class="notification__text">Your Trial Membership will expire in 28 days.
                Click here to upgrade. Or Contact Us if you have any questions.
              </span>
            </div>
