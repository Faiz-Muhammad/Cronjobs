<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <% @page_title = "ADD POSTS - SCHEDULE IN TWO SIMPLE STEPS" %>
  <%= render 'layouts/page_header' %>

  <!-- Main content -->
  <section class="content">
    <section class="container-main">
      <main>
        <section class="btn-handler u-margin-bottom-small">
          <!-- <%= link_to 'Refresh Access Tokens', user_facebook_omniauth_authorize_path, class: "btns btns-white" %> -->
          <%= link_to "Manage Social Media Accounts", pages_path, class: "btns-white btns" %>
        </section>
        <section class="forms u-margin-bottom-small">
          <div class="forms__step1 u-margin-bottom-small">
            <div class="form__text-box">Step 1 : Select from Pages or Categories where you want to publish&nbsp;</div>
            <div class="checkboxescon">
              <label class="checkboxcontainer u-margin-bottom-small" for="checkall">Select all
                <input type="checkbox" id="checkall">
                <span class="checkmark"></span>
              </label>
              <label class="checkboxcontainer u-margin-bottom-small" for="pageimages">Load Page Images
                <input type="checkbox" id="pageimages">
                <span class="checkmark"></span>
              </label>
            </div>
          </div>
          <div class="form__text u-margin-bottom-small">
            <h4>SELECT SOCIAL ACCOUNTS</h4>

            <div class="table-content">
              <%= bootstrap_form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                  <table>
                    <thead>
                    <tr>
                      <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% current_user.pages.each do |page| %>
                        <tr>
                          <td><%= check_box_tag "page_ids[]", page.id %>&nbsp;<%= image_tag((page.page_image), class: "img-circle") %>&nbsp;<%= page.page_name %></td>
                        </tr>
                    <% end %>
                    </tbody>
                  </table>
                  </div>
                  </div>
                  <div class="form__text-box step2">Step 2 : SELECT THE TYPE OF POST YOU WANT TO PUBLISH&nbsp;</div>
                  </section>
                  </main>
                  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" id="tabs3" onclick="showStuff(this)">
                      <a class="nav-link active" data-toggle="pill" role="tab" aria-controls="pills-link" aria-selected="true">Add
                        Status <i class="fas fa-link"></i></a>
                    </li>
                    <li class="nav-item" id="tabs4" onclick="showStuff(this)">
                      <a class="nav-link" data-toggle="pill" role="tab" aria-controls="pills-home" aria-selected="false">Add
                        Link <i class="fas fa-smile-wink"></i></a>
                    </li>
                    <li class="nav-item" id="tabs2" onclick="showStuff(this)">
                      <a class="nav-link" data-toggle="pill" role="tab" aria-controls="pills-profile" aria-selected="false">Add
                        Images <i class="fas fa-image"></i></a>
                    </li>
                    <li class="nav-item" id="tabs1" onclick="showStuff(this)">
                      <a class="nav-link" data-toggle="pill" role="tab" aria-controls="pills-contact" aria-selected="false">Add
                        Videos <i class="fas fa-video"></i></a>
                    </li>
                  </ul>
                  <div class="tab-content" id="tabs-3">
                    <div class="tab-pane active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                      <section class="container content ">
                        <!-- Foam for URL-->
                        <div id="tabs-1" class="tabContent">
                          <div class="form-group" style=" width: 50%">
                            <%= f.file_field :images, multiple: true, class: "form-control " %>
                          </div>
                        </div>
                        <div id="tabs-2" class="tabContent">
                          <div class="form-group" style=" width: 50%">
                            <%= f.file_field :images, multiple: true, class: "form-control " %>
                          </div>
                        </div>
                        <div id="tabs-4" class="tabContent">
                          <div class="form-group ">
                            <%= f.text_field :link, class: "form-control field-width" %>
                          </div>
                        </div>
                        <div class="form-group">
                          <%= f.text_area :description, class: "form-control field-width description--height" %>
                        </div>
                        <div class="form-group">
                          <%= f.select :start_time, [['5 minutes', 5], ['10 minutes', 10], ['15 minutes', 15], ['20 minutes(recomended)', 20]], {}, {class: 'box--height'} %>
                        </div>
                        <div class="form-group">
                          <%= f.select :interval, [['5 minutes', 5], ['10 minutes', 10], ['15 minutes', 15], ['20 minutes(recomended)', 20]], {}, {class: 'box--height'} %>
                        </div>
                        <div class="form-group">
                          <%= f.select :time_gap, [['5 minutes', 5], ['10 minutes', 10], ['15 minutes', 15], ['20 minutes(recomended)', 20]], {}, {class: 'box--height'} %>
                        </div>
                        <div class="form-group">
                          <%= f.select :delete_time, [['Never', 0], ['5 minutes', 5], ['10 minutes', 10], ['15 minutes', 15], ['20 minutes(recomended)', 20]], {}, {class: 'box--height'} %>
                        </div>
                        <div class="form-group">
                          <%= submit_tag "Create Post", class: "btn btn-primary" %>
                        </div>
                      </section>
                    </div>
              <% end %>
              </div>
              </section>
  </section>
</div>
